<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="TeamLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TeamNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/team_name_margin_top</item>
        <item name="android:textSize">@dimen/team_name_text_size</item>
        <item name="android:textColor">@color/team_name_text_color</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="ScoreTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/team_score_text_size</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:layout_marginTop">@dimen/score_text_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/score_text_view_margin_bottom</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginRight">@dimen/button_margin_right</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_left</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
